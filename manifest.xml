<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>38e5c66d-52a1-4454-9c9a-abcde1234567</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Rebul Yazılım</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName>Send Confirmation</DisplayName>
  <Description>Mail gönderiminden önce onay alır.</Description>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemSend">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://outlook-send-confirmation.vercel.app/" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
</OfficeApp>
